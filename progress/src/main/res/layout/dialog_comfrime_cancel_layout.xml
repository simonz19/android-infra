<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.common.borderable.BorderTextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="title"
        android:textSize="20sp"
        auto:borderColor="@color/com_border"
        auto:borderWidth_="1dp"
        auto:borders="bottom" />

    <com.common.borderable.BorderLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.common.borderable.BorderTextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="cancel"
            android:textSize="15sp"
            auto:borderColor="@color/com_border"
            auto:borderRightPaddingBottom="5dp"
            auto:borderRightPaddingTop="5dp"
            auto:borderWidth_="1dp"
            auto:borders="right" />

        <TextView
            android:id="@+id/tv_dialog_comfrime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="comfirm"
            android:textSize="15sp" />
    </com.common.borderable.BorderLinearLayout>

</LinearLayout>